<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BossMainInfoActivity">

    <RelativeLayout
        android:id="@+id/boss_main_info_layout_up"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/cyna">

        <ImageButton
            android:id="@+id/boss_main_info_back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_main_course_search_back"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/boss_info"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/boss_main_info_edit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/edit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/boss_main_info_layout_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/boss_main_info_layout_up"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/boss_id"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/boss_main_info_boss_id"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boss_main_info_layout_boss_id"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/boss_name"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/boss_main_info_boss_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boss_main_info_layout_boss_name"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/boss_Introduction"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/boss_main_info_boss_information"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boss_main_info_layout_boss_information"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/boss_detailed_position"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/boss_main_info_boss_position"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boss_main_info_layout_boss_position"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/boss_telephone"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:maxLength="11"
                android:id="@+id/boss_main_info_boss_telephone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:ignore="TextFields" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boss_main_info_layout_boss_receipt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boss_main_info_layout_boss_telephone"
            android:padding="5dp">

            <TextView
                android:id="@+id/boss_main_info_text_receipt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center"
                android:text="@string/receipt_info"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/boss_main_info_text_receipt_info">

                <Spinner
                    android:id="@+id/boss_main_info_receipt_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:dropDownVerticalOffset="20dp"
                    android:entries="@array/receipt_type"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/boss_main_info_receipt_id"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>