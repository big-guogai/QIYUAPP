<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/boss_course_item">

    <TextView
        android:id="@+id/head_choose_popwindow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/change_head"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/head_choose_popwindow_line1"

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/head_choose_popwindow_title"
        android:layout_margin="5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/head_choose_popwindow_layout_img_recycle_view"
        android:background="@color/littlewhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_choose_popwindow_line1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/head_choose_popwindow_img_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <Button
        android:id="@+id/head_choose_popwindow_btn_canCle"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:text="@string/cancle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/head_choose_popwindow_layout_img_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>