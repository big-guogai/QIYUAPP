<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrialBossInfoActivity">

    <RelativeLayout
        android:id="@+id/trial_boss_info_layout_up"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/cyna">

        <ImageButton
            android:id="@+id/trial_boss_info_back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_main_course_search_back"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/application_info"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trial_boss_info_layout_up">

        <RelativeLayout
            android:id="@+id/trial_boss_info_layout_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_info_user_id"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/trial_boss_info_user_id"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/gray"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_user_id"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_name"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/trial_boss_info_boss_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/gray"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_name"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_Introduction"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/trial_boss_info_boss_information"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/gray"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_information"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_main_position"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/trial_boss_info_boss_position"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/gray"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_position"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/trial_boss_info_boss_telephone_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:gravity="center"
                        android:text="@string/boss_telephone"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/trial_boss_info_boss_telephone"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:inputType="none"
                        android:textColor="@color/gray"
                        android:textIsSelectable="true"
                        android:textSize="12sp"
                        tools:ignore="TextFields" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/trial_boss_info_boss_telephone_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trial_boss_info_boss_telephone_up"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_call_phone"
                    android:gravity="center"
                    android:text="@string/trial_phone_call"
                    android:textColor="@color/green"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_telephone"
                android:padding="5dp">

                <TextView
                    android:id="@+id/trial_boss_info_text_boss_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_photo"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trial_boss_info_text_boss_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/trial_boss_info_boss_photo_main1"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/trial_boss_info_boss_photo_main2"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/trial_boss_info_boss_photo_main3"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/trial_boss_info_boss_photo_main4"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/trial_boss_info_boss_photo_main5"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/trial_boss_info_layout_boss_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_phone"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/boss_document"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/trial_boss_info_boss_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/trial_boss_info_layout_boss_receipt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_document"
                android:padding="5dp">

                <TextView
                    android:id="@+id/trial_boss_info_text_receipt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:gravity="center"
                    android:text="@string/receipt_info"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trial_boss_info_text_receipt_info">

                    <Spinner
                        android:id="@+id/trial_boss_info_receipt_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:dropDownVerticalOffset="20dp"
                        android:entries="@array/receipt_type"
                        android:spinnerMode="dropdown" />

                    <EditText
                        android:id="@+id/trial_boss_info_receipt_id"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:inputType="none"
                        android:textColor="@color/gray"
                        android:textIsSelectable="true"
                        android:textSize="12sp"
                        tools:ignore="TextFields" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/trial_boss_info_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trial_boss_info_layout_boss_receipt_info"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/trial_boss_info_btn_refuse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_login"
                    android:text="@string/application_refuse"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/trial_boss_info_btn_pass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_login"
                    android:text="@string/trial_pass"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>